<Window x:Class="PhamDucHungWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">

    <Grid>
        <Border Background="White"
        Padding="30"
        CornerRadius="15"
        Width="320"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="🔐 LOGIN"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#3B82F6"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Email -->
                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border CornerRadius="8" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Margin="0,0,0,10">
                    <TextBox x:Name="txtEmail"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             Height="35"/>
                </Border>
                <TextBlock x:Name="txtEmailError" Foreground="Red" FontSize="12"/>

                <!-- Password -->
                <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Border CornerRadius="8" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Margin="0,0,0,10">
                    <PasswordBox x:Name="txtPassword"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 Height="35"/>
                </Border>
                <TextBlock x:Name="txtPasswordError" Foreground="Red" FontSize="12"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        Background="#3B82F6"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,20,0,10"
                        Click="BtnLogin_Click"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Register Button -->
                <Button Content="Register"
                        Height="35"
                        Background="#E5E7EB"
                        Foreground="#1F2937"
                        FontWeight="Bold"
                        Click="BtnRegister_Click"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
