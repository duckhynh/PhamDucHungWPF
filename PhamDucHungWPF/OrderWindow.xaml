<Window x:Class="PhamDucHungWPF.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamDucHungWPF"
        mc:Ignorable="d"
        Title="Order Management"
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Available Products" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>

        <!-- Product List -->
        <ListBox x:Name="listBoxProducts"
                 Grid.Row="1"
                 SelectionMode="Multiple"
                 Background="White"
                 BorderBrush="#D1D5DB"
                 BorderThickness="1"
                 Padding="10"
                 FontSize="14"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,10">
            <Button x:Name="btnPlaceOrder"
                    Content="Place Order"
                    Width="120" Height="35"
                    Background="#10B981" Foreground="White"
                    FontWeight="SemiBold" Margin="5"
                    Click="btnPlaceOrder_Click"/>
            <Button x:Name="btnViewOrders"
                    Content="View Orders"
                    Width="120" Height="35"
                    Background="#3B82F6" Foreground="White"
                    FontWeight="SemiBold" Margin="5"
                    Click="btnViewOrders_Click"/>
        </StackPanel>

        <!-- Order List -->
        <ListBox x:Name="listBoxOrders"
                 Grid.Row="3" Margin="0,0,0,0"
                 Background="White"
                 BorderBrush="#D1D5DB" BorderThickness="1"
                 Padding="10"
                 FontSize="14"
                 SelectionChanged="listBoxOrders_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E5E7EB" BorderThickness="1" Padding="10" Margin="0,0,0,10" Background="White">
                        <StackPanel>
                            <TextBlock Text="{Binding OrderId, StringFormat='Order #{0}'}" FontWeight="Bold" FontSize="15"/>
                            <TextBlock Text="{Binding OrderDate, StringFormat='Date: {0:dd/MM/yyyy}'}" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding OrderAmount, StringFormat='Total: {0:N0}đ'}" Foreground="#16A34A"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
