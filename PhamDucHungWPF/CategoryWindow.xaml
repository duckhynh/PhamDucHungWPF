<Window x:Class="PhamDucHungWPF.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamDucHungWPF"
        mc:Ignorable="d"
        Title="Category Management"
        Height="500" Width="990"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form Section -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Left">
            <StackPanel Margin="5">
                <TextBlock Text="Name" FontWeight="SemiBold"/>
                <TextBox x:Name="txtName" Width="182" Height="42" Margin="0,5"
                         Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Padding="10"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Description" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" Width="182" Height="42" Margin="0,5"
                         Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Padding="10"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Picture" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPicture" Width="182" Height="42" Margin="0,5"
                         Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Padding="10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,15,0,0">
                <Button x:Name="btnAdd" Content="Add" Width="70" Margin="5"
                        Background="#10B981" Foreground="White" FontWeight="SemiBold" Click="btnAdd_Click"/>
                <Button x:Name="btnUpdate" Content="Update" Width="70" Margin="5"
                        Background="#F59E0B" Foreground="White" FontWeight="SemiBold" Click="btnUpdate_Click"/>
                <Button x:Name="btnDelete" Content="Delete" Width="70" Margin="5"
                        Background="#EF4444" Foreground="White" FontWeight="SemiBold" Click="btnDelete_Click"/>
                <Button Content="Product" Height="32" Width="80" Margin="5"
                        Background="#E0E7FF" Foreground="#1E3A8A" FontWeight="Bold" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid x:Name="dgCategories"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionChanged="dgCategories_SelectionChanged"
                  BorderBrush="#D1D5DB" BorderThickness="1"
                  HeadersVisibility="Column"
                  RowHeight="38"
                  FontSize="14"
                  GridLinesVisibility="None"
                  AlternatingRowBackground="#F9FAFB"
                  Background="White"
                  VerticalGridLinesBrush="#E5E7EB"
                  HorizontalGridLinesBrush="#E5E7EB"
                  ColumnHeaderHeight="40"
                  Margin="0,0,0,10">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Background" Value="#F3F4F6"/>
                    <Setter Property="Foreground" Value="#374151"/>
                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Height" Value="38"/>
                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Picture" Binding="{Binding Picture}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>