<Window x:Class="PhamDucHungWPF.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamDucHungWPF"
        mc:Ignorable="d"
        Title="CategoryWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="Name"/>
                <TextBox x:Name="txtName" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Description"/>
                <TextBox x:Name="txtDescription" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Picture"/>
                <TextBox x:Name="txtPicture" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,0,0,0" Width="282">
                <Button x:Name="btnAdd" Content="Add" Width="60" Margin="5" Click="btnAdd_Click"/>
                <Button x:Name="btnUpdate" Content="Update" Width="60" Margin="5" Click="btnUpdate_Click"/>
                <Button x:Name="btnDelete" Content="Delete" Width="60" Margin="5" Click="btnDelete_Click"/>
                <Button Content="Product" Height="20" Width="60" Background="Aquamarine" Click="Button_Click"/>
            </StackPanel>
            
        </StackPanel>
            
        <DataGrid x:Name="dgCategories" Grid.Row="1" AutoGenerateColumns="False" SelectionChanged="dgCategories_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Picture" Binding="{Binding Picture}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
