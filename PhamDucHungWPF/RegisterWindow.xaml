<Window x:Class="PhamDucHungWPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <Border Background="White" Padding="20" CornerRadius="10"
                VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="Register" FontSize="22" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Full Name:"/>
                <TextBox x:Name="txtName" Margin="0,5"/>
                <TextBlock x:Name="txtNameError" Foreground="Red" FontSize="12"/>

                <TextBlock Text="Email:"/>
                <TextBox x:Name="txtEmail" Margin="0,5"/>
                <TextBlock x:Name="txtEmailError" Foreground="Red" FontSize="12"/>

                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="txtPassword" Margin="0,5"/>
                <TextBlock x:Name="txtPasswordError" Foreground="Red" FontSize="12"/>

                <Button Content="Register" Margin="0,20,0,10" Click="BtnRegister_Click"/>
                <Button Content="Back to Login" Click="BtnBack_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
